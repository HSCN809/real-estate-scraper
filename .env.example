# ===========================================
# Real Estate Scraper - Environment Variables
# ===========================================
# Bu dosyayı .env olarak kopyalayın ve değerleri düzenleyin
# cp .env.example .env

# ===========================================
# Backend API Configuration
# ===========================================

# API sunucu ayarları
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000

# Veritabanı yolu (Docker volume içinde)
DATABASE_PATH=/app/database/real_estate.db

# Log seviyesi (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ===========================================
# Chrome/Selenium Configuration
# ===========================================

# Headless mod (Docker'da true olmalı)
CHROME_HEADLESS=true

# Chrome driver timeout (saniye)
CHROME_TIMEOUT=30

# ===========================================
# Frontend Configuration
# ===========================================

# API URL (Docker network içinde api servisine bağlanır)
NEXT_PUBLIC_API_URL=http://api:8000/api/v1

# ===========================================
# Scraper Configuration (Opsiyonel)
# ===========================================

# Sayfa başına bekleme süresi (saniye)
# SCRAPER_PAGE_DELAY=2

# Maksimum retry sayısı
# SCRAPER_MAX_RETRIES=3

# Request timeout (saniye)
# SCRAPER_REQUEST_TIMEOUT=30
