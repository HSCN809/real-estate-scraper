# ===========================================
# Real Estate Scraper - Environment Variables
# ===========================================
# Bu dosyayı .env olarak kopyalayın ve değerleri düzenleyin
# cp .env.example .env

# ===========================================
# Database Configuration (PostgreSQL)
# ===========================================
POSTGRES_USER=scraper
POSTGRES_PASSWORD=scraper_password
POSTGRES_DB=real_estate
DATABASE_URL=postgresql://scraper:scraper_password@db:5432/real_estate

# ===========================================
# Backend API Configuration
# ===========================================
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
LOG_LEVEL=INFO

# ===========================================
# Redis Configuration
# ===========================================
REDIS_URL=redis://redis:6379/0

# ===========================================
# CORS & Security
# ===========================================
CORS_ORIGINS=http://localhost:3000,http://frontend:3000
JWT_SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_DAYS=30
ENVIRONMENT=development

# ===========================================
# Flower Monitoring
# ===========================================
FLOWER_BASIC_AUTH=admin:admin123

# ===========================================
# Chrome/Selenium Configuration
# ===========================================
CHROME_HEADLESS=false
CHROME_TIMEOUT=30

# ===========================================
# Frontend Configuration
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# ===========================================
# Scraper Configuration (Opsiyonel)
# ===========================================
SCRAPER_PAGE_DELAY=1.5
SCRAPER_MAX_RETRIES=3
